<resources>
    <!--
      To change the hint label and low storage texts you have to override the library's default
      strings 'recordHintString', 'speakHintString' and 'lowStorageString' by re-defining the
      strings here.

      Note:
      You don't have to re-define the string here if you're not changing it.
      Strings here are re-defined to the same default values just for example.
     -->
    <!-- Hint label texts -->
    <string name="recordHintString"><i>1. Start scanning</i></string>
    <string name="speakHintString"><i>2. Say the room name</i></string>

    <!--
      Low storage warning text
      Always include '%1$d' in the string. It's a placeholder for the value of the available minutes
    -->
    <string name="lowStorageString">Low storage: %1$d minutes left!</string>

    <!-- App name -->
    <string name="app_name">ExampleProject</string>

    <!-- String values used in 'activity_scan_info' where we fill in the order information -->
    <string name="street"><i>Street | required</i></string>
    <string name="number"><i>Street number</i></string>
    <string name="suite"><i>Suite number</i></string>
    <string name="city"><i>City</i></string>
    <string name="state"><i>State</i></string>
    <string name="country"><i>Country</i></string>
    <string name="postalCode"><i>Postal code</i></string>
</resources>
